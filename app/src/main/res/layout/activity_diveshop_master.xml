<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Diveshop.DiveshopMasterActivity">

    <TextView
        android:id="@+id/tvDsMasterName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:textSize="50dp"
        android:textColor="#ffffff"
        android:background="@drawable/background_radius"
        android:textAlignment="center"
        android:text="TextView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnScan"
        android:layout_width="130dp"
        android:layout_height="40dp"
        android:layout_marginTop="4dp"
        android:background="@drawable/background_button_radius_blue"
        android:text="掃描QR Code"
        android:textColor="#ffffff"
        android:textSize="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.253"
        app:layout_constraintStart_toEndOf="@+id/ivDiveshop"
        app:layout_constraintTop_toBottomOf="@+id/tvDsMasterName" />

    <Button
        android:id="@+id/btnConfirm"
        android:layout_width="130dp"
        android:layout_height="40dp"
        android:background="@drawable/background_button_radius_blue"
        android:text="確認"
        android:textColor="#ffffff"
        android:textSize="16dp"
        app:layout_constraintEnd_toEndOf="@+id/btnScan"
        app:layout_constraintTop_toBottomOf="@+id/btnScan" />

    <TextView
        android:id="@+id/tvResult"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="140dp"
        android:background="#ECF5FF"
        android:text=""
        android:textColor="@color/colorTitle"
        android:textSize="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.473"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvDsMasterName" />

    <ImageView
        android:id="@+id/ivDiveshop"
        android:layout_width="166dp"
        android:layout_height="119dp"
        android:layout_marginStart="30dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="5dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvDsMasterName"
        tools:srcCompat="@tools:sample/backgrounds/scenic[11]" />

    <Button
        android:id="@+id/btnClear"
        android:layout_width="130dp"
        android:layout_height="40dp"
        android:background="@drawable/background_button_radius_blue"
        android:text="清除"
        android:textColor="#ffffff"
        android:textSize="16dp"
        app:layout_constraintEnd_toEndOf="@+id/btnScan"
        app:layout_constraintTop_toBottomOf="@+id/btnConfirm" />

    <Button
        android:id="@+id/btnLogout"
        android:layout_width="47dp"
        android:layout_height="49dp"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/logout"
        android:text=""
        app:layout_constraintStart_toStartOf="@+id/tvDsMasterName"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>