<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tvMarkerDrag"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:lines="2"
        android:text="MarkerDrag" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <fragment
            android:id="@+id/fmMap"
            class="com.google.android.gms.maps.SupportMapFragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|left"
            android:background="#FFFFFF"
            android:orientation="horizontal"
            android:padding="5dp">

            <Button
                android:id="@+id/btnSetDp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:background="@drawable/background_button_radius_blue"
                android:onClick="onDivepoint"
                android:text="潛點"
                android:textColor="#ffffff"
                android:textSize="20dp" />

            <Button
                android:id="@+id/btnSetDs"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_weight="0.5"
                android:background="@drawable/background_button_radius_blue"
                android:onClick="onDiveshop"
                android:text="潛店"
                android:textColor="#ffffff"
                android:textSize="20dp" />
        </LinearLayout>
    </FrameLayout>

</LinearLayout>